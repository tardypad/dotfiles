#!/bin/sh
# commands used:
# - focus_window_title
# - htop
# - swaymsg
# - termite
# - tmux

TITLE='sway_monitor'

# try to focus existing window if it exists
focus_window_title "${TITLE}" && exit

# launch new app otherwise
swaymsg -q exec \
  "termite \
   -t \"${TITLE}\" \
   -e 'tmux new-session -A -s monitor \"htop\"'"
