#!/bin/sh
# commands used:
# - create_workspace
# - focus_window_title
# - neomutt
# - swaymsg
# - termite
# - tmux

TITLE='Mail client'

# try to focus existing window if it exists
focus_window_title "${TITLE}" && exit

# launch new app otherwise in new workspace
create_workspace 'mail'
swaymsg -q exec \
  "termite \
   -t \"${TITLE}\" \
   -e 'tmux new-session -A -s mail \"neomutt\"'"
