#!/bin/sh
# commands used:
# - git (includes own command: root)

TODO_FILE="$( git root )/TODO.md"

cat <<- EOF > "${TODO_FILE}"
	# Periodic

	# Cleaning

	# Bugs

	# Testing

	# Improvements

	# New Features

	# Research

EOF

git add "${TODO_FILE}"

git commit "${TODO_FILE}" -m 'add TODO file skeleton'
