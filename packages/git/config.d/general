[core]
    # LESS default options apparently break the display
    # so we redefine needed options here
    pager = /usr/share/git/diff-highlight/diff-highlight \
        | less \
          --ignore-case \
          --line-numbers \
          --chop-long-lines \
          --RAW-CONTROL-CHARS \
          --no-init \
          --quit-if-one-screen \
          --tabs=4
