[user]
        name = Damien Tardy-Panis
[include]
        path = ~/.config/git/config.local
[include]
        path = ~/.config/git/aliases
[url "tardypad:~/damien.git/"]
        insteadOf = perso:
[url "tardypad:~/damien.old/"]
        insteadOf = perso_old:
[url "github:tardypad/"]
        insteadOf = github:
[init]
        templatedir = ~/.config/git/template
[push]
        default = upstream
[log]
        decorate = false
[core]
        # LESS default options apparently break the display
        # so we redefine needed options here
        pager = /usr/share/git/diff-highlight/diff-highlight | less \
          --ignore-case \
          --line-numbers \
          --chop-long-lines \
          --RAW-CONTROL-CHARS \
          --no-init \
          --quit-if-one-screen \
          --tabs=4
[color "diff"]
        commit = yellow
        context = normal
        frag = blue
        func = cyan
        meta = 11 italic
        new = green
        old = red
        whitespace = reverse
[color "diff-highlight"]
        oldNormal = red
        oldHighlight = red ul
        newNormal = green
        newHighlight = green ul
