[user]
    name = Damien Tardy-Panis
[include]
    path = ~/.config/git/config.local
[include]
    path = ~/.config/git/aliases
[url "tardypad:~/damien.git/"]
    insteadOf = perso:
[url "tardypad:~/damien.old/"]
    insteadOf = perso_old:
[url "github:tardypad/"]
    insteadOf = github:
[init]
    templatedir = ~/.config/git/template
[push]
    default = upstream
[log]
    decorate = false
[core]
    # LESS default options apparently break the display
    # so we redefine needed options here
    pager = /usr/share/git/diff-highlight/diff-highlight \
        | less \
          --ignore-case \
          --line-numbers \
          --chop-long-lines \
          --RAW-CONTROL-CHARS \
          --no-init \
          --quit-if-one-screen \
          --tabs=4
[color "diff"]
    commit = {{{base0A/number}}}
    context = normal
    frag = {{{base0D/number}}}
    func = {{{base0C/number}}}
    meta = {{{base03/number}}} italic
    new = {{{add/number}}}
    old = {{{delete/number}}}
    whitespace = reverse
[color "diff-highlight"]
    oldNormal = {{{delete/number}}}
    oldHighlight = {{{delete/number}}} ul
    newNormal = {{{add/number}}}
    newHighlight = {{{add/number}}} ul
