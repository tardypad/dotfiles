[user]
        name = Damien Tardy-Panis
[url "ssh://tardypad/~/damien.git/"]
        insteadOf = perso:
[url "ssh://tardypad/~/damien.old/"]
        insteadOf = perso_old:
[push]
        default = upstream
[log]
        decorate = false
[core]
        # LESS default options apparently break the display
        # so we redefine needed options here
        pager = diff-so-fancy | less \
          --ignore-case \
          --line-numbers \
          --chop-long-lines \
          --RAW-CONTROL-CHARS \
          --no-init \
          --quit-if-one-screen \
          --tabs=4
[diff-so-fancy]
        markEmptyLines = false
        changeHunkIndicators = true
        stripLeadingSymbols = false
        useUnicodeRuler = false
[color "diff"]
        commit = {{{base0A/number}}}
        context = normal
        frag = {{{base0D/number}}}
        func = {{{base0C/number}}}
        meta = {{{base03/number}}} italic
        new = {{{base0B/number}}}
        old = {{{base08/number}}}
        whitespace = reverse
[color "diff-highlight"]
        oldNormal = {{{base08/number}}}
        oldHighlight = {{{base08/number}}} ul
        newNormal = {{{base0B/number}}}
        newHighlight = {{{base0B/number}}} ul
[url "github:tardypad/"]
        insteadOf = github:
[include]
        path = ~/.config/git/aliases
[include]
        path = ~/.config/git/config.local
[init]
        templatedir = ~/.config/git/template
