# normal mode
map      q quit
map  <C-c> abort
map Escape abort
map      : focus_inputbar :
map      o focus_inputbar ':open '
map      R reload
map    Tab toggle_index
map      h scroll left
map      j scroll down
map      k scroll up
map      l scroll right
map  <C-f> scroll full-down
map  <C-b> scroll full-up
map  <C-d> scroll half-down
map  <C-u> scroll half-up
map  <C-e> scroll down
map  <C-y> scroll up
map     gg goto top
map      G goto bottom
map      H scroll page-top
map      L scroll page-bottom
map  <C-i> jumplist forward
map  <C-o> jumplist backward
map      m mark_add
map    "'" mark_evaluate
map      / focus_inputbar /
map      ? focus_inputbar ?
map      n search forward
map      N search backward
map      f follow
map  <C--> zoom out
map  <C-+> zoom in
map  <C-=> zoom specific
map     zf adjust_window best-fit
map     zw adjust_window width
map      d toggle_page_mode
map      Z toggle_fullscreen
map  <C-p> toggle_presentation

# fullscreen mode
# (mostly duplicated from normal mode...)
