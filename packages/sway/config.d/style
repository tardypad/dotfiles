# new window default border is without title bar
default_border pixel 3

# put some gaps between views
gaps inner 10

# only put gaps if there are several views
smart_gaps on

# don't show border when to any screen edge
hide_edge_borders both

# title bar font
font Source Sans Pro, Font Awesome 5 Free 14

# windows decorations colors
# title border / title background / title text / indicator / view border
client.focused          $base09     $base09     $base00     $base0A     $base09
client.focused_inactive $background $background $base09     $background $base0A
client.unfocused        $background $background $foreground $background $base0A
