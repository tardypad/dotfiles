bar {
    position top
    height 30
    font Source Sans Pro, Font Awesome 5 Free 14
    binding_mode_indicator yes

    colors {
        background         $background
        statusline         $foreground
        separator          $foreground
        focused_background $background
        focused_statusline $foreground
        focused_separator  $foreground

        focused_workspace  $base08     $base08     $base00
        inactive_workspace $background $background $foreground
        active_workspace   $background $background $base08
        urgent_workspace   $notice     $notice     $base00

        binding_mode $background $background $notice
    }

    # status part
    status_command i3blocks
    separator_symbol ' '
}
