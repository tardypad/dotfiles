#! /usr/bin/env zsh

TITLE='Chat client'

# try to focus existing window if it exists
focus_window_title "${TITLE}" && exit

# launch new app otherwise in new workspace
create_workspace
swaymsg --quiet exec \
  "termite \
   --title \"${TITLE}\" \
   --exec 'tmux new-session -A -s chat \"weechat\"'"
