#!/bin/sh

printf '%s' "${PATH}" \
  | tr ':' '\n' \
  | xargs -I [] \
    -- find -L [] \
       -type f \
       -exec basename {} \; \
       2> /dev/null \
  | sort -u \
  | fzf --reverse \
        --no-multi \
        --margin 1,2,0,2 \
        --prompt 'run ' \
        --color info:{color/background/number} \
  | xargs -I{} \
    -- swaymsg -q exec {}
