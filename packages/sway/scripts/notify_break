#!/usr/bin/env zsh

TMP_RESULT_FILE=$(mktemp)

cat << EOF > "${TMP_RESULT_FILE}"
                                 ███████▀▀▔▔▔▔▔▀▀▀▀▀▀███████
   █████▄                ██      ███▛▘                 ▀████
   ██  ▀██ ▄████▄    ██ █████    ██▘           ▂▄▄▅▄▁    ▜██
   ██   ██ ██  ██    ▄▄  ██      █▌   ▁▁▄▃▃▂▃▆▇█████▋     ▜█
   ██  ▄██ ██  ██    ██  ██      █▏  ▗███████████████▏     █
   █████▀  ▀████▀    ██  ▐███    █▙  ▝███████████████▙    ▐█
                                 ███▖ █▛▃▃▔▀▀█▛▘▔ ▝▆██▎▁▃▀██
                                 ███▎▁▟█▅▅▅▇████▇▇▇███▙▄▀███
  ██     ██  ██   ██  █████  ██  ███▅▛▀█████████▋▜██████████
  ██     ██  ▐█   █▌  ██     ██  █████▎████▆▆▃▃▅█▆█████▋████
  ██     ██   █▌ ▐█   █████  ██  ██████████▀▔ ▔  ▜██████████
  ██     ██   ▐█▄█▌   ██     ▀▀  ███████▀███▅▆▇▇▆▆████▛▀████
  █████  ██    ███    █████  ██  ███▀▔▔▔  ▜▜█▙▄▄▄███▛▀▀▌
                                 ▀▔        ▜▅▀▀▛▀▀▀▘▄▇█▌
EOF

notification \
  'Take a break' \
  "${TMP_RESULT_FILE}" \
  'qutebrowser https://old.reddit.com/r/MadeMeSmile/random \
     && swaymsg -t command "[class=qutebrowser]" focus'
