#!/bin/sh

LIGHT_MODE_FILE_PATH="${XDG_RUNTIME_DIR}/i3blocks_light_mode"
SIGNAL_MAX=10

if [ ! -f "${LIGHT_MODE_FILE_PATH}" ]; then
  touch "${LIGHT_MODE_FILE_PATH}"
else
  rm "${LIGHT_MODE_FILE_PATH}"
fi

# send all update signals to the bar status
# to refresh all items display
for i in $( seq 1 "${SIGNAL_MAX}" ); do
  pkill -RTMIN+"$i" i3blocks
done
