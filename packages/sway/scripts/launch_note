#! /usr/bin/env zsh

NOTES_FOLDER="$( xdg-user-dir NOTES )"

NOTE=$(
  ls "${NOTES_FOLDER}" \
  | fzf --reverse \
        --no-multi \
        --margin 1,2,0,2 \
        --prompt 'open note ' \
        --color info:8 \
)

[[ -n "${NOTE}" ]] || exit

swaymsg -t command \
  exec "termite --title 'ï‰‰ Notes' --exec \"zsh -c 'tmux new-session "vim ${NOTES_FOLDER}/${NOTE}"'\""
