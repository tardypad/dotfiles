#!/bin/sh
# commands used:
# - fzf_launcher
# - swaymsg
# - termite
# - tmux
# - vim
# - xdg-user-dir

NOTES_FOLDER="$( xdg-user-dir NOTES )"

NOTE=$(
  {
    echo NEW;
    ls "${NOTES_FOLDER}";
  } \
  | fzf_launcher 'open note '
)

[ -n "${NOTE}" ] || exit

if [ "${NOTE}" = 'NEW' ]; then
  printf 'filename: '
  read -r NOTE
fi

swaymsg -q exec \
  "termite \
   -t 'ï‰‰ Notes' \
   -e 'tmux new-session \"vim ${NOTES_FOLDER}/${NOTE}\"'"
