#!/bin/sh

ACTION=$(
  {
    echo '  Lock screen';
    echo '  Suspend';
    echo '  Logout';
    echo '  Shutdown';
    echo '  Reboot';
  } \
  | fzf --reverse \
        --no-multi \
        --margin 1,2,0,2 \
        --color info:{color/background/number}
)

case "${ACTION}" in
  *Lock\ screen) swaylock;;
  *Suspend)     systemctl suspend;;
  *Logout)      swaymsg -q exit;;
  *Shutdown)    systemctl poweroff;;
  *Reboot)      systemctl reboot;;
esac
