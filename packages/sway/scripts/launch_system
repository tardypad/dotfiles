#! /usr/bin/env zsh

ACTION=$(
echo -n \
"  Lock screen\n"\
"  Suspend\n"\
"  Logout\n"\
"  Shutdown\n"\
"  Reboot"\
  | fzf --reverse \
        --no-multi \
        --margin 1,2,0,2 \
        --color info:{color/background/number} \
)

case "${ACTION}" in
  *Lock\ screen) swaylock;;
  *Suspend)     systemctl suspend;;
  *Logout)      swaymsg --quiet exit;;
  *Shutdown)    systemctl poweroff;;
  *Reboot)      systemctl reboot;;
esac
