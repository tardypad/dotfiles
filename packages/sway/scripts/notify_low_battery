#!/usr/bin/env zsh

# #HACK: to prevent multiple display of this notification
# the trigger of this notification should be made outside of i3blocks
# to not be coupled with the interval defined there
makoctl dismiss --all

notify-send \
  --category 'alert' \
  'Low battery' \
  'Battery level is getting low'

aplay \
  "${XDG_CONFIG_HOME:-$HOME/.config}/sway/sounds/low_battery.wav" \
  2> /dev/null
