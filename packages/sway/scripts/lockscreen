#!/usr/bin/env zsh

# lock.png should use base04 color
swaylock \
  --color {{{base00/hex}}} \
  --image "${XDG_CONFIG_HOME:-$HOME/.config}/sway/images/lock.png" \
  --scaling center \
  --indicator-radius 250 \
  --indicator-thickness 15 \
  --insidecolor 00000000 \
  --insidevercolor 00000000 \
  --insidewrongcolor 00000000 \
  --bshlcolor {{{base05/hex}}}ff \
  --keyhlcolor {{{base04/hex}}}ff \
  --ringcolor {{{base01/hex}}}ff \
  --ringvercolor {{{base0A/hex}}}ff \
  --ringwrongcolor {{{base16/error/hex}}}ff \
  --linecolor 00000000 \
  --separatorcolor 00000000 \
  --textcolor 00000000
