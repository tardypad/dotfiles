#!/usr/bin/env zsh

swaylock \
  --color {color/background/hex} \
  --image "${XDG_CONFIG_HOME:-$HOME/.config}/sway/images/lock.svg" \
  --scaling center \
  --indicator-radius 250 \
  --indicator-thickness 15 \
  --insidecolor 00000000 \
  --insidevercolor 00000000 \
  --insidewrongcolor 00000000 \
  --bshlcolor {color/base04/hex}ff \
  --keyhlcolor {color/base09/hex}ff \
  --ringcolor {color/base01/hex}ff \
  --ringvercolor {color/base09/hex}ff \
  --ringwrongcolor {color/error/hex}ff \
  --linecolor 00000000 \
  --separatorcolor 00000000 \
  --textcolor 00000000
