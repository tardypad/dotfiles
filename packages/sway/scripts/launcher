#!/bin/sh
# commands used:
# - focus_window_title
# - swaymsg
# - termite

COMMAND="$*"

# try to focus existing window if it exists
focus_window_title 'sway_launcher' && exit

# launch new launcher otherwise
swaymsg -q exec \
  "termite \
   -e \"${COMMAND}\" \
   -c ${HOME}/.config/termite/config_launcher \
   -t sway_launcher"
