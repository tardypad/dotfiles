" color scheme
colorscheme color_scheme

" Tab completion in a popup
set wildmenu
set wildstyle=popup

" always start with quick file view on
view!

" create compressed archive of selected items to Desktop
command! tgz tar --create --gzip --file ~/Desktop/%a.tgz %f

" same custom mapping to quit as closing a buffer in vim
nnoremap <Space>q :quit<CR>
nnoremap <C-q>    :quit<CR>

" mappings for usage within vim as file picker
noremap <Space>s :SplitVim<CR>
noremap <Space>v :VsplitVim<CR>

" filetypes
filetype *.pdf zathura %f

" tmux navigation
nnoremap <M-h> :!tmux select-pane -L<cr>
nnoremap <M-j> :!tmux select-pane -D<cr>
nnoremap <M-k> :!tmux select-pane -U<cr>
nnoremap <M-l> :!tmux select-pane -R<cr>
nnoremap <M-a> :!tmux select-pane -l<cr>
