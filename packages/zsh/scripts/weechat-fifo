#!/bin/sh

init_variables() {
  COMMAND=${0##*/}

  FIFO_FILE=~/.weechat/weechat_fifo

  BUFFER=
}

usage() {
  cat <<- EOF
	usage: ${COMMAND} [<options>] [<buffer>]

	Remote control of weechat via FIFO pipe
	Text or command is read from stdin
	If <buffer> is not specified, current buffer is used

	Options:
	  -h           show this message only
	EOF
}

error() {
  [ -z "$1" ] || echo "${COMMAND}: $1"
  echo "Try '${COMMAND} -h' for more information."
  exit 1
} >&2

fifo_send() {
  while read -r LINE; do
    echo "${BUFFER} *${LINE}" > "${FIFO_FILE}"
  done
}

parse_options() {
  while getopts h OPT; do
    case "${OPT}" in
      h) usage; exit 0 ;;
      ?) error ;;
    esac
  done

  shift $(( OPTIND - 1 ))

  BUFFER=$1
}

validate_options() {
  if [ ! -p "${FIFO_FILE}" ]; then
    error "FIFO file not present"
  fi
}

init_variables
parse_options "$@"
validate_options

fifo_send
