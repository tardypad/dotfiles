#!/bin/sh

init_variables() {
  COMMAND=${0##*/}

  FIFO_FILE=~/.weechat/weechat_fifo

  BUFFER=
}

error() {
  [ -z "$1" ] || echo "${COMMAND}: $1"
  exit 1
} >&2

fifo_send() {
  while read -r LINE; do
    echo "${BUFFER} *${LINE}" > "${FIFO_FILE}"
  done
}

parse_options() {
  BUFFER=$1
}

validate_options() {
  if [ ! -p "${FIFO_FILE}" ]; then
    error "FIFO file not present"
  fi
}

init_variables
parse_options "$@"
validate_options

fifo_send
