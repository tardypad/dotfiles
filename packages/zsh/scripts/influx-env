#!/bin/sh
# commands used:
# - influx

init_variables() {
  COMMAND=${0##*/}

  ENV_DIR_PATH="${XDG_DATA_HOME:-$HOME/.local/share}/env/influx"

  INFLUX_OPTIONS=
  PROJECT=
  QUERY=

  ENV_PATH=
}

error() {
  [ -z "$1" ] || echo "${COMMAND}: $1"
  exit 1
} >&2

run_influx() {
  if [ -z "${QUERY}" ]; then
    influx $( cat "${ENV_PATH}" ) ${INFLUX_OPTIONS}
  else
    influx $( cat "${ENV_PATH}" ) ${INFLUX_OPTIONS} -execute ${QUERY}
  fi
}

parse_options() {
  PROJECT="$1"
  shift 2> /dev/null

  while [ "$#" -gt 0 ] && [ "$1" != '--' ]; do
    QUERY="${QUERY} $1"
    shift
  done

  shift 2> /dev/null
  INFLUX_OPTIONS="$*"
}

validate_options() {
  if [ -z "${PROJECT}" ]; then
    error 'missing project'
  fi

  ENV_PATH="${ENV_DIR_PATH}/${PROJECT}"

  if [ ! -f "${ENV_PATH}" ]; then
    error 'invalid project'
  fi
}

init_variables
parse_options "$@"
validate_options

run_influx
