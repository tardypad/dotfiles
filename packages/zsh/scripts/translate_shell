#!/usr/bin/env zsh

COMMAND=${0:t}

init_variables() {
  SOURCE_LANGUAGE=
  TARGET_LANGUAGE=
}


usage() {
  cat << EOF
usage: ${COMMAND} [<options>] source target

Launch a translation interactive shell

Options:
  -h,  --help    show this message only
EOF
}


error() {
  [[ -z "$1" ]] || echo "${COMMAND}: $1" >&2
  echo "Try '${COMMAND} --help' for more information."
  exit 1
}


parse_options() {
  while [[ "$#" -gt 0 ]]; do
    case "$1" in
      -h|--help)
        usage
        exit 0
        ;;
      *)
        break 2
        ;;
    esac
  done

  SOURCE_LANGUAGE="$1"
  TARGET_LANGUAGE="$2"
}


validate_options() {
  if [[ -z "${SOURCE_LANGUAGE}" ]]; then
    error 'missing source language'
  fi

  if [[ -z "${TARGET_LANGUAGE}" ]]; then
    error 'missing target language'
  fi
}


init_variables
parse_options "$@"
validate_options

trans --shell "${SOURCE_LANGUAGE}:${TARGET_LANGUAGE}"
