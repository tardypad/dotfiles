#compdef tmux-env

local env_dir_path="${XDG_DATA_HOME:-$HOME/.local/share}/env/tmux/"

_targets() {
  local targets=( $(
    ls "${env_dir_path}"
  ) )

  compadd "$@" $targets
}

_sessions() {
  _path_files -g '*.sh(:r)' -W "${env_dir_path}/$words[1]"
}

_arguments \
  '-b[launch in background, no attach]' \
  '-h[display the help]' \
  '1:target:_targets' \
  '*::sessions:_sessions'
