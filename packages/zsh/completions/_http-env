#compdef http-env

local env_dir_path="${XDG_CONFIG_HOME:-$HOME/.config}/http/env/"

_projects() {
  local folders=( $(
    ls "${env_dir_path}"
  ) )

  compadd "$@" $folders
}

_envs() {
  _path_files -W "${env_dir_path}/$words[CURRENT-1]"
}

_arguments \
  '(-h --help)'{-h,--help}'[display the help]' \
  '1:project:_projects' \
  '2:env:_envs'
