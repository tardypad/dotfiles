if [[ $(tty) = /dev/tty1 ]]; then
  # display logins from other users since my last login
  # and stop to have time to read it and not overlook it
  other_logins=$( last-others )
  if [[ $? -eq 0 ]]; then
    echo
    echo -n "$(tput setaf {color/alert/number})Alert$(tput sgr0): "
    echo 'There were other users login since your last one:'
    echo "${other_logins}"
  fi
  unset other_logins

  # display any short fortune with cookie name
  echo "$(tput setaf {color/base0A/number})"
  fortune -acs -n 300
  echo "$(tput sgr0)"

  echo 'Press any key to continue'
  read -s -k 1

  # Automatically start sway after login on tty 1
  if [[ -z "${DISPLAY}" ]]; then
    export XKB_DEFAULT_OPTIONS=caps:escape

    # different config whether external monitor is enabled or not
    if grep --quiet --no-messages enabled /sys/class/drm/card0-DP-1/enabled; then
      SWAY_CONFIG_FILE=~/.config/sway/config_desk
    else
      SWAY_CONFIG_FILE=~/.config/sway/config_laptop
    fi

    exec sway --config "${SWAY_CONFIG_FILE}"  &>> /var/log/sway/sway.log
  fi
fi
