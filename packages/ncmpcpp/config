# disable mouse usage
mouse_support = no

# local collection directory
mpd_music_dir = ~/Music

# folder to store ncmpcpp files
ncmpcpp_directory = ~/.local/share/ncmpcpp

# startup screens
startup_screen = playlist
startup_slave_screen = media_library
startup_slave_screen_focus = no

# lyrics
# storing lyrics in song dir doesn't seem to work...
# so disabling it
lyrics_directory = ~/.local/share/ncmpcpp/lyrics
store_lyrics_in_song_dir = no
follow_now_playing_lyrics = yes
fetch_lyrics_for_current_song_in_background = yes
external_editor = vim
use_console_editor = yes

# display time of messages
message_delay_time = 2

# display time of highlight in playlist
playlist_disable_highlight_delay = 2

# change volume by steps of 5
volume_change_step = 5

# screen splitting
locked_screen_width_part = 60
ask_for_locked_screen_width_part = no

# interface components
header_visibility = yes
statusbar_visibility = yes
titles_visibility = yes

# status bars components
display_volume_level = yes
display_bitrate = no
display_remaining_time = no

# song formats
song_status_format = "{{%a{ / %y{ / %b}} / }{%t}}|{%f}"
song_library_format = "{%n - }{%t}|{%f}"
song_columns_list_format = "(20)[{color/base0C/name}]{a} (20)[{color/base0A/name}]{b} (6f)[]{nrE} (49)[]{t|f:Title} (7f)[]{lr}"

# browser sorting
browser_sort_mode = format
browser_sort_format = {%a - }{%t}|{%f}

# markers
progressbar_look = "━●"
empty_tag_marker = "--"

# colors
main_window_color = default
header_window_color = {color/base0A/name}
volume_color = {color/base0C/name}
state_line_color = {color/base01/name}
state_flags_color = {color/notice/name}
progressbar_color = {color/base01/name}
progressbar_elapsed_color = {color/base0B/name}
statusbar_color = default
statusbar_time_color = {color/base0A/name}
player_state_color = {color/base0C/name}
window_border_color = {color/base0A/name}
active_window_border = {color/base0B/name}
empty_tag_color = default
color1 = {color/base0B/name}
color2 = {color/base0A/name}

discard_colors_if_item_is_selected = no

current_item_prefix = $({color/current_item/name})$r
current_item_suffix = $/r$(end)
current_item_inactive_column_prefix = $({color/current_item/name})
current_item_inactive_column_suffix = $(end)
now_playing_prefix = $({color/base0C/name})
now_playing_suffix = $(end)
selected_item_prefix = $({color/selected_item/name})
selected_item_suffix = $(end)
