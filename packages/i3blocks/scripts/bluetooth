#!/bin/sh

MODE="$( bar_status_mode )"

# #TODO: take into account multiple connected devices

BLUETOOTH_INFO=$( bluetoothctl info )

# only display something if a device is connected
if ! echo "${BLUETOOTH_INFO}" \
     | grep -q 'Connected: yes'; then
  exit 0
fi

BLUETOOTH_DEVICE_ALIAS=$(
  echo "${BLUETOOTH_INFO}" \
    | sed -n 's/.*Alias: \(.*\)/\1/p'
)

if [ "${MODE}" = 'full' ]; then
  echo "<span foreground='#{color/base09/hex}'></span> ${BLUETOOTH_DEVICE_ALIAS}"
else
  echo "<span foreground='#{color/base09/hex}'></span>"
fi
