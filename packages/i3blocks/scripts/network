#!/bin/sh

MODE="$( bar_status_mode )"

NETWORK_INFO=$(
  nmcli -f type,state,connection device status \
    | tr -s ' '
)

if echo "${NETWORK_INFO}" \
     | grep -q 'ethernet connected'; then
  IS_ETHERNET_CONNECTED=1
else
  IS_ETHERNET_CONNECTED=0
fi

if echo "${NETWORK_INFO}" \
     | grep -q 'wifi connected'; then
  IS_WIFI_CONNECTED=1
else
  IS_WIFI_CONNECTED=0
fi

WIFI_CONNECTION=$(
  echo "${NETWORK_INFO}" \
    | grep 'wifi connected' \
    | cut -d ' ' -f 3-
)

# NetworkManager automatically favors wired connections over wireless
if [ "${IS_ETHERNET_CONNECTED}" -eq 1 ]; then
  if [ "${MODE}" = 'full' ]; then
    echo "<span foreground='#{color/base0A/hex}'></span> Wired"
  else
    echo "<span foreground='#{color/base0A/hex}'></span>"
  fi
elif [ "${IS_WIFI_CONNECTED}" -eq 1 ]; then
  if [ "${MODE}" = 'full' ]; then
    echo "<span foreground='#{color/base0A/hex}'></span> ${WIFI_CONNECTION}"
  else
    echo "<span foreground='#{color/base0A/hex}'></span>"
  fi
else
  if [ "${MODE}" = 'full' ]; then
    echo "<span foreground='#{color/warning/hex}'> Disconnected</span>"
  else
    echo "<span foreground='#{color/warning/hex}'></span>"
  fi
fi
