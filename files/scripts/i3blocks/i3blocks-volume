#!/bin/sh

MODE="$( i3blocks-mode )"

VOLUME_INFO=$(
  amixer get Master \
    | sed -n '/\[[0-9]\{1,3\}%\] \[.*\]/p' \
    | head -n 1
)

echo "${VOLUME_INFO}" | grep -q '\[on\]'
IS_VOLUME_MUTED=$?

VOLUME_PERCENT=$(
  echo "${VOLUME_INFO}" \
    | sed 's/.*\[\([0-9]\{1,3\}\)%\].*/\1/'
)

if [ "${VOLUME_PERCENT}" -lt 50 ]; then
  VOLUME_ICON=''
else
  VOLUME_ICON=''
fi

if [ "${IS_VOLUME_MUTED}" -eq 1 ]; then
  COLOR='#{color/notice/hex}'

  if [ "${MODE}" = 'full' ]; then
    TEXT='  Muted'
  else
    TEXT=''
  fi
else
  if [ "${MODE}" = 'full' ]; then
    TEXT="${VOLUME_ICON}  ${VOLUME_PERCENT}%"
  else
    TEXT="${VOLUME_ICON}"
  fi
fi

printf '%s\n\n%s\n' "${TEXT}" "${COLOR}"
