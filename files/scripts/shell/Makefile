all: shell-scripts

shell-scripts:
	mkdir -p $(DESTDIR)$(BIN_DIR)

	setup/setup-file scripts/shell/backup                       > $(DESTDIR)$(BIN_DIR)/backup
	setup/setup-file scripts/shell/base                         > $(DESTDIR)$(BIN_DIR)/base
	setup/setup-file scripts/shell/battery-status               > $(DESTDIR)$(BIN_DIR)/battery-status
