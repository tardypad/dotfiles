#!/bin/sh

exec /usr/bin/fzf \
  --no-bold --marker="*" \
  --layout=reverse \
  --no-separator \
  --no-scrollbar \
  --color="bg:{color/background/number}" \
  --color="fg:{color/foreground/number}" \
  --color="hl:{color/base0A/number}:bold" \
  --color="current-fg:{color/base00/number}" \
  --color="current-bg:{color/current_item/number}" \
  --color="current-hl:{color/base00/number}:bold" \
  --color="info:{color/base0A/number}" \
  --color="prompt:{color/base0A/number}" \
  --color="pointer:{color/base00/number}" \
  --color="marker:{color/selected_item/number}" \
  --color="spinner:{color/base0A/number}" \
  --color="border:{color/base0A/number}" \
  --color="header:{color/base0A/number}" \
  --color="gutter:{color/background/number}" \
  --color="query:{color/foreground/number}" \
  --color="disabled:{color/base02/number}" \
  --bind="right-click:ignore" \
  --bind="double-click:ignore" \
  --bind="shift-down:ignore" \
  --bind="shift-up:ignore" \
  --bind="shift-left:ignore" \
  --bind="shift-right:ignore" \
  --bind="home:ignore" \
  --bind="end:ignore" \
  --bind="pgdn:ignore" \
  --bind="pgup:ignore" \
  --bind="alt-bs:ignore" \
  --bind="alt-b:ignore" \
  --bind="alt-d:ignore" \
  --bind="alt-f:ignore" \
  --bind="ctrl-a:ignore" \
  --bind="ctrl-f:ignore" \
  --bind="ctrl-g:ignore" \
  --bind="ctrl-j:ignore" \
  --bind="ctrl-k:ignore" \
  --bind="ctrl-y:ignore" \
  --bind="ctrl-{key/interrupt/low}:abort,ctrl-{key/quit/low}:abort,{key/escape/esc}:abort" \
  --bind="{key/return/return}:accept" \
  --bind="ctrl-{key/command_start/low}:beginning-of-line" \
  --bind="{key/left/left}:backward-char" \
  --bind="{key/right/right}:forward-char" \
  --bind="ctrl-{key/backspace/low}:backward-delete-char,{key/backspace/bspace}:backward-delete-char" \
  --bind="ctrl-{key/command_delete_backward_word/low}:backward-kill-word" \
  --bind="ctrl-{key/command_delete_start/low}:unix-line-discard" \
  --bind="ctrl-{key/command_delete_all/low}:beginning-of-line+kill-line" \
  --bind="ctrl-{key/command_end/low}:end-of-line" \
  --bind="ctrl-{key/clear/low}:clear-screen" \
  --bind="ctrl-{key/next/low}:next-history" \
  --bind="ctrl-{key/previous/low}:previous-history" \
  --bind="ctrl-{key/t}:toggle" \
  --bind="ctrl-alt-{key/t}:toggle-all" \
  --bind="shift-{key/tabulation/tab}:up,{key/up/up}:up" \
  --bind="{key/tabulation/tab}:down,{key/down/down}:down" \
  --bind="change:first" \
  "$@"
