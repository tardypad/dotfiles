# normal mode
map {key/quit}                     quit
map <C-{key/interrupt/low}>        abort
map {key/escape/Escape}            abort
map {key/command}                  focus_inputbar :
map {key/open}                     focus_inputbar ':open '
map {key/reload}                   reload
map {key/tabulation/Tab}           toggle_index
map {key/left}                     scroll left
map {key/down}                     scroll down
map {key/up}                       scroll up
map {key/right}                    scroll right
map <C-{key/scroll_page_down/low}> scroll full-down
map <C-{key/scroll_page_up/low}>   scroll full-up
map <C-{key/scroll_down/low}>      scroll half-down
map <C-{key/scroll_up/low}>        scroll half-up
map <C-{key/scroll_line_down/low}> scroll down
map <C-{key/scroll_line_up/low}>   scroll up
map {key/goto_top}{key/goto_top}   goto top
map {key/goto_bottom}              goto bottom
map {key/line_top}                 scroll page-top
map {key/line_bottom}              scroll page-bottom
map <C-{key/i}>                    jumplist forward
map <C-{key/o}>                    jumplist backward
map {key/mark_set}                 mark_add
map "{key/mark_jump}"              mark_evaluate
map {key/search_forward}           focus_inputbar /
map {key/search_backward}          focus_inputbar ?
map {key/search_repeat}            search forward
map {key/search_repeat_reverse}    search backward
map {key/f}                        follow
map <C-{key/zoom_out}>             zoom out
map <C-{key/zoom_in}>              zoom in
map <C-{key/zoom_reset}>           zoom specific
map {key/zoom}{key/f}              adjust_window best-fit
map {key/zoom}{key/w}              adjust_window width
map {key/d}                        toggle_page_mode
map {key/zoom/upp}                 toggle_fullscreen
map <C-{key/p}>                    toggle_presentation

# fullscreen mode
# (mostly duplicated from normal mode...)
map [fullscreen] {key/quit}                     quit
map [fullscreen] <C-{key/interrupt/low}>        abort
map [fullscreen] {key/escape/Escape}            abort
map [fullscreen] {key/command}                  focus_inputbar :
map [fullscreen] {key/open}                     focus_inputbar ':open '
map [fullscreen] {key/reload}                   reload
map [fullscreen] {key/tabulation/Tab}           toggle_index
map [fullscreen] {key/left}                     scroll left
map [fullscreen] {key/down}                     scroll down
map [fullscreen] {key/up}                       scroll up
map [fullscreen] {key/right}                    scroll right
map [fullscreen] <C-{key/scroll_page_down/low}> scroll full-down
map [fullscreen] <C-{key/scroll_page_up/low}>   scroll full-up
map [fullscreen] <C-{key/scroll_down/low}>      scroll half-down
map [fullscreen] <C-{key/scroll_up/low}>        scroll half-up
map [fullscreen] <C-{key/scroll_line_down/low}> scroll down
map [fullscreen] <C-{key/scroll_line_up/low}>   scroll up
map [fullscreen] {key/goto_top}{key/goto_top}   goto top
map [fullscreen] {key/goto_bottom}              goto bottom
map [fullscreen] {key/line_top}              scroll page-top
map [fullscreen] {key/line_bottom}              scroll page-bottom
map [fullscreen] <C-{key/i}>                    jumplist forward
map [fullscreen] <C-{key/o}>                    jumplist backward
map [fullscreen] {key/mark_set}                 mark_add
map [fullscreen] "{key/mark_jump}"              mark_evaluate
map [fullscreen] {key/search_forward}           focus_inputbar /
map [fullscreen] {key/search_backward}          focus_inputbar ?
map [fullscreen] {key/search_repeat}            search forward
map [fullscreen] {key/search_repeat_reverse}    search backward
map [fullscreen] {key/f}                        follow
map [fullscreen] <C-{key/zoom_out}>             zoom out
map [fullscreen] <C-{key/zoom_in}>              zoom in
map [fullscreen] <C-{key/zoom_reset}>           zoom specific
map [fullscreen] {key/zoom}{key/f}              adjust_window best-fit
map [fullscreen] {key/zoom}{key/w}              adjust_window width
map [fullscreen] {key/d}                        toggle_page_mode
map [fullscreen] {key/zoom/upp}                 toggle_fullscreen

# index mode
map [index] {key/down}                   navigate_index down
map [index] {key/up}                     navigate_index up
map [index] {key/goto_top}{key/goto_top} navigate_index top
map [index] {key/goto_bottom}            navigate_index bottom
map [index] {key/left/low}               navigate_index collapse
map [index] {key/right/low}              navigate_index expand
map [index] {key/left/upp}               navigate_index collapse-all
map [index] {key/right/upp}              navigate_index expand-all
map [index] <C-{key/return/low}>         navigate_index select
map [index] {key/return/Return}          navigate_index select
map [index] {key/tabulation/Tab}         toggle_index
map [index] <C-{key/interrupt/low}>      toggle_index
map [index] {key/escape/Escape}          toggle_index
map [index] {key/quit}                   toggle_index

# presentation mode
map [presentation] {key/up}                     navigate previous
map [presentation] {key/down}                   navigate next
map [presentation] {key/space/Space}            navigate next
map [presentation] {key/goto_top}{key/goto_top} goto top
map [presentation] {key/goto_bottom}            goto bottom
map [presentation] <C-{key/interrupt/low}>      toggle_presentation
map [presentation] {key/escape/Escape}          toggle_presentation
map [presentation] <C-{key/p}>                  toggle_presentation
map [presentation] {key/quit}                   toggle_presentation
