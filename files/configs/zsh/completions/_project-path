#compdef project-path

_types() {
  local types=(
    main
    repo
  )

  compadd "$@" $types
}

_projects() {
  case $words[2] in
    main)
      compadd $(
        find "${PROJECTS_REPO_DIR}"/* \
            -type d -prune -exec basename {} \;
      ) ;;
    repo)
      compadd $(
        find "${PROJECTS_REPO_DIR}"/*/* \
            -type d -prune -exec basename {} \;
      ) ;;
  esac
}

_arguments \
  '1:type:_types' \
  '2:project:_projects'
