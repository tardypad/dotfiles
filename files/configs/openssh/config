Host *
    PubkeyAcceptedKeyTypes=+ssh-dss
    HashKnownHosts no
    EscapeChar %
    ForwardAgent no
    AddKeysToAgent yes
    IdentitiesOnly yes

Host github
    Hostname github.com
    User git
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_github.pub

Host sourcehut
    Hostname git.sr.ht
    User git
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_sourcehut.pub

Host surg tardypad
    Hostname tardypad.me
    User damien
    Port 11235
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_surg.pub

Host status
    Hostname tardypad.me
    User damien
    Port 11235
    IdentityFile ~/.ssh/id_status.pub

Host backup
    Hostname tardypad.me
    User backup
    Port 11235
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_backup.pub
