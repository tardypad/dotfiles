Host github
    Hostname github.com
    User git
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_github

Host sourcehut
    Hostname git.sr.ht
    User git
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_sourcehut

Host aur
    Hostname aur.archlinux.org
    User aur
    IdentityFile ~/.ssh/id_yubikey.pub

Host chestnut
    Hostname tardypad.me
    User damien
    Port 11235
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_chestnut

Host pistachio
    Hostname 192.168.1.100
    User pi
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_pistachio

Host hazelnut
    Hostname 192.168.2.15
    User nemo
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_hazelnut

Host *
    PubkeyAcceptedAlgorithms +ssh-rsa
    HashKnownHosts no
    UserKnownHostsFile ~/.ssh/known_hosts ~/.ssh/managed_known_hosts
    EscapeChar {key/%}
    ForwardAgent no
    AddKeysToAgent yes
    IdentitiesOnly yes
    SetEnv TERM=xterm-256color
