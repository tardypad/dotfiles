Host github
    Hostname github.com
    User git
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_github

Host sourcehut
    Hostname git.sr.ht
    User git
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_sourcehut

Host chestnut
    Hostname tardypad.me
    User damien
    Port 11235
    IdentityFile ~/.ssh/id_yubikey.pub
    IdentityFile ~/.ssh/id_chestnut

Host *
    PubkeyAcceptedAlgorithms +ssh-rsa
    HashKnownHosts no
    EscapeChar {key/%}
    ForwardAgent no
    AddKeysToAgent yes
    IdentitiesOnly yes
