Host *
    PubkeyAcceptedKeyTypes=+ssh-dss
    HashKnownHosts no
    EscapeChar %
    ForwardAgent no
    AddKeysToAgent yes
    IdentitiesOnly yes

Host github
    Hostname github.com
    User git
    IdentityFile ~/.ssh/id_github

Host sourcehut
    Hostname git.sr.ht
    User git
    IdentityFile ~/.ssh/id_sourcehut

Host surg tardypad
    Hostname tardypad.me
    User damien
    Port 11235
    IdentityFile ~/.ssh/id_surg

Host status
    Hostname tardypad.me
    User damien
    Port 11235
    IdentityFile ~/.ssh/id_status

Host backup
    Hostname tardypad.me
    User backup
    Port 11235
    IdentityFile ~/.ssh/id_backup
