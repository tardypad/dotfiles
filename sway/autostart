# start initial browser
exec chromium

# Projects terminal
# needs TERM defined properly beforehand
# for proper color within vim
exec termite \
  --exec 'sh -c "TERM=xterm-256color tmux"' \
  --title sway_projects

# Servers terminal
exec termite \
  --title sway_servers

# Chat terminal
exec termite \
  --exec weechat \
  --title sway_chat

# Mail terminal
# needs a shell started before to have correct GPG_TTY
# so that the pinentry is displayed in the new terminal
exec termite \
  --exec 'zsh -c neomutt' \
  --title sway_mail
