# general
bind-key q quit
bind-key ? help
bind-key : cmdline
bind-key ENTER open
bind-key ^M open
bind-key ^L redraw

# navigation
bind-key g home
bind-key G end
bind-key ^F pagedown
bind-key ^B pageup
bind-key j down
bind-key k up
bind-key J next-unread feedlist
bind-key K prev-unread feedlist
bind-key J next-unread articlelist
bind-key K prev-unread articlelist
bind-key ^N next-unread article
bind-key ^P prev-unread article
bind-key ^N next-unread-feed articlelist
bind-key ^P prev-unread-feed articlelist

# feed
bind-key f reload
bind-key F reload-all
bind-key r mark-feed-read
bind-key R mark-all-feeds-read

# article
bind-key o open-in-browser-and-mark-read
bind-key u show-urls
bind-key "#" goto-url
